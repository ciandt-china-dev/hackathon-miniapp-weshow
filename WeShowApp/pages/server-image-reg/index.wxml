<view class="page">
  <view class="page__bd">
    <view class="top-bar">
      <scroll-view scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-top="{{scrollTop}}">
        <block wx:for-items="{{categorys}}">
            <view id="{{item.id}}" class="scroll-view-item" bindtap="selectCategory">
                <text class="category-name">{{item.name}}</text>
            </view>
        </block>
      </scroll-view>
    </view>
    <view class="section right-bar {{showRightBar}}">
      <text class="toggle-right-bar" bindtap="toggleRightBar">ã€Š</text>
      <scroll-view class="right-bar-scroll" scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll"  scroll-top="{{scrollTop}}">
        <block wx:for-items="{{glasses}}">
            <view id="{{item.id}}" class="scroll-view-item" bindtap="selectGoods">
                <image class="widgets__info-img" src="{{item.src}}" mode="aspectFill" />
            </view>
        </block>
       </scroll-view>
    </view>
    <view class="section content">
      <button class="choose-image" bindtap="chooseImage">Chosse Image</button>
      <view class="base-image">
          <image src="{{backgroundImage}}" mode="aspectFill" />
      </view>
    </view>
  </view>
</view>
