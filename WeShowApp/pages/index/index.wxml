<view class="page">
  <!--<view class="page__hd">
    <text class="page__title">scroll-view</text>
    <text class="page__desc">可滚动视图区域</text>
  </view>-->
  <view class="page__bd">
    <view class="top-bar">
      <scroll-view scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-top="{{scrollTop}}">
        <block wx:for-items="{{category}}">
            <view id="{{item.id}}" class="scroll-view-item" bindtap="selectCategory">
                <text class="category-name">{{item.name}}</text>
            </view>
        </block>
      </scroll-view>
    </view>
    <view class="section right-bar">
      <scroll-view scroll-y="true" style="height: 450px;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll"  scroll-top="{{scrollTop}}">
        <block wx:for-items="{{glasses}}">
            <view id="{{item.id}}" class="scroll-view-item" bindtap="selectGoods">
                <image class="widgets__info-img" src="{{item.src}}" mode="aspectFill" />
                <!--<text class="widgets__info-name">{{item.name}}</text>-->
            </view>
        </block>
       </scroll-view>
    </view>
    <view class="section content">
    </view>
  </view>
</view>
