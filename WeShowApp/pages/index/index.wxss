.page{
  font-size:14px;
}
.top-bar{
  border-bottom:2px solid #1AAD16;
  text-align: center;
  padding: 5px 0;
}

.top-bar .scroll-view-item{
  display: inline-block;
  padding: 10px 15px;
  border-right: 1px solid #eee;
}
.top-bar .scroll-view-item.active{
  color:#1AAD16;
}
.top-bar .scroll-view-item:first-child{
  border-left: 1px solid #eee;
}
.right-bar{
  width:146px;
  position: absolute;
  right: -120px;
}
.right-bar.show{
  transform:translate(-120px,0);
}
.right-bar .toggle-right-bar{
  display: inline-block;
  width: 26px;
  vertical-align: middle;
  text-align: center;
  background: rgba(26, 173, 22, 0.65);
  color: #fff;
  padding: 30px 0;
}

.right-bar.show .toggle-right-bar{
	transform: rotate(-180deg);
}
.right-bar-scroll{
  width: 120px;
  height: 522px;
  background: #fff;
  display:inline-block;
  vertical-align: middle;
}
.right-bar .scroll-view-item{
  text-align: center;
  font-size:14px;
  padding: 10px;
  border-bottom: 1px solid #ddd;
  color: #1AAD16;
}
.right-bar .scroll-view-item image{
	width: 100px;
	height: 30px;
	display: block;
}
.hats .right-bar .scroll-view-item image{  
	height: 60px;
}
.right-bar .widgets__info-name{
  margin-top: 5px;
}

.content{
  height: 523px;
  background: #f6f8f9;
}

.scroll-view-item_H{
  display: inline-block;
}

.cavans_content{
    height:1000rpx;
    width:750rpx;
}