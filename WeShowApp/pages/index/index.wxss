.page{
  font-size:14px;
}
.top-bar{
  border-bottom:2px solid #1AAD16;
  text-align: center;
  padding: 5px 0;
}

.top-bar .scroll-view-item{
  display: inline-block;
  padding: 10px 15px;
  border-right: 1px solid #eee;
}
.top-bar .scroll-view-item:first-child{
  border-left: 1px solid #eee;
}
.right-bar{
  width:150px;
  position: fixed;
  right: -124px;
}
.right-bar.show{
  transform:translate(-124px,0);
}
.right-bar .toggle-right-bar{
  display: inline-block;
  width: 26px;
  vertical-align: middle;
  text-align: center;
  background: rgba(255, 255, 255, 0.55);
  color: #1AAD16;
  padding: 30px 0;
  /*margin-right: 4px;*/
}

.right-bar.show .toggle-right-bar{
	transform: rotate(-180deg);
}
.right-bar-scroll{
  width: 120px;
  background: #f6f8f9;
  display:inline-block;
  vertical-align: middle;
}
.right-bar .scroll-view-item{
  text-align: center;
  font-size:14px;
  padding: 10px;
  border-bottom: 1px solid #ddd;
  color: #1AAD16;
}
.right-bar .scroll-view-item image{
	width: 100px;
	height: 30px;
	display: block;
}
.right-bar .widgets__info-name{
  margin-top: 5px;
}

.content{
  height: 523px;
  background: #ddd;
}

.scroll-view-item_H{
  display: inline-block;
}

